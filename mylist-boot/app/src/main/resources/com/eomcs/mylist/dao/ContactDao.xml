<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- 
  namespace => 인터페이스의 패키지 및 이름과 일치해야 한다.
 -->
<mapper namespace="com.eomcs.mylist.dao.ContactDao">

  <!-- 테이블의 컬럼과 객체 필드를 연결한다. -->
  <resultMap type="contact" id="contactMap">
    <id column="contact_no" property="no"/>
    <result column="name" property="name"/>
    <result column="tel" property="tel"/>
    <result column="email" property="email"/>
    <result column="company" property="company"/>
  </resultMap>
  
  
  <select id="countAll" resultType="int">
    select count(*) from contact
  </select>

  <!-- 
    id => 인터페이스의 메서드 이름과 일치해야 한다.
   -->
  <select id="findAll" resultMap="contactMap">
    select 
      contact_no,
      name,
      tel,
      email,
      company
    from 
      ml_contact
    order by 
      title asc
  </select>
  
  <insert id="insert" parameterType="contact">
    insert into ml_contact(name,tel,email,company) 
    values(#{name},#{tel},#{email},#{company})
  </insert>
  
  <!-- 
    parameterType => 메서드의 파라미터 타입 및 개수와 일치해야 한다.
   -->
  <select id="findByNo" resultMap="contactMap" parameterType="int">
    select 
      contact_no,
      name,
      tel,
      email,
      company
    from 
      ml_contact 
    where 
      contact_no=#{no}
  </select>
  
  <select id="findByEmail" resultMap="contactMap" parameterType="String">
    select 
      contact_no,
      name,
      tel,
      email,
      company
    from 
      ml_contact 
    where 
      email=#{email}
  </select>
  
  <select id="findByName" resultMap="contactMap" parameterType="String">
    select 
      contact_no,
      name,
      tel,
      email,
      company
    from 
      ml_contact 
    where 
      name=#{name}
  </select>


  <update id="update" parameterType="Book">
    update ml_contact set 
      title=#{title}, 
      author=#{author},
      press=#{press},
      feed=#{feed},
      read_date=#{read_date},
      page=#{page},
      price=#{price} 
    where 
      contact_no=#{no}
  </update>
  

  <delete id="delete" parameterType="int">
    delete from ml_book 
    where book_no=#{no}
  </delete>

</mapper>








